@page
@model ProjectWebsite.Pages.Customer.NewCustomerModel
@{
	ViewData["Title"] = "Færdiggør ordre";
}
<span class="brlarge"></span>
<div class="row justify-content-center">
	<div class="col-9 col-xs-8 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 alert alert-secondary">
		<form method="post">
			<div class="form-group">
				<label asp-for="@Model.Customer.Name" class="control-label"></label>
				<input asp-for="@Model.Customer.Name" class="form-control" placeholder="Indtast navn" required />
				<span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Customer.Address" class="control-label"></label>
				<input asp-for="@Model.Customer.Address" class="form-control" placeholder="Indtast adresse" required />
				<span asp-validation-for="@Model.Customer.Address" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@Model.Customer.Email" class="control-label"></label>
				<input asp-for="@Model.Customer.Email" class="form-control" type="email" placeholder="Indtast email" required />
				<span asp-validation-for="@Model.Customer.Email" class="text-danger"></span>
			</div>
			<div>
				<label asp-for="@Model.Customer.PhoneNumber" class="control-label"></label>
				<input asp-for="@Model.Customer.PhoneNumber" class="form-control" placeholder="Indtast telefonnummer" required />
				<span asp-validation-for="@Model.Customer.PhoneNumber" class="text-danger"></span>
			</div>
			<p></p>
			<div class="form-group d-flex justify-content-between">
				<button type="submit" class="btn btn-success">Gennemfør ordre <i class="fa-solid fa-truck-fast"></i> </button>
				<input type="reset" class="btn btn-warning" value="Ryd felter" />
				<button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Page("/Basket/Basket")'">Tilbage</button>
			</div>
		</form>
	</div>
</div>