</div> *@

<div class="row">
	<div class="col-4 mb-4">
		<form method="post" class="form-inline">
			@* <h5>Søg på navn</h5> *@
			<div class="input-group">
				<input asp-for="SearchCustomer" class="form-control mr-1" placeholder="Søg på et navn" />
				<input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<table class="table table-hover" width="60%">
	<colgroup>
		<col style="width : 5%">
		<col style="width : 77%">
		<col style="width : 9%">
		<col style="width : 9%">
	</colgroup>
	<thead class="secondary">
		<tr class="secondary ">
			<th>
				Id
			</th>
			<th>
				Name
			</th>
			<th>
				Address
			</th>
			<th>
				E-mail
			</th>
			<th>
				Telefonnummer
			</th>
			<th>
				
			</th>
			<th>
				
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.CustomerList != null)
		{
			foreach (var c in Model.CustomerList)
			{
			<tr @* class="btn-secondary" *@>
					<th scope="row">
						@c.ID
					</th>
					<td>
						@c.Name
					</td>
					<td>
						@c.Address
					</td>
					<td>
						@c.Email
					</td>
					<td>
                        @c.PhoneNumber
					<td>
						<a class="btn btn-primary btn-sm" type="button" title="Update" asp-page="UpdateCustomer" asp-route-id="@c.ID"><i class="fa fa-edit"></i></a>
					</td>
					<td>
						<a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteCustomer" asp-route-id="@c.ID"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateCustomer"> Create a new Customer </a>
</p>