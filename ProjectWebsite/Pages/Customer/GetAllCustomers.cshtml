</div> *@

<div class="row">
	<div class="col-4 mb-4">
		<form method="post" class="form-inline">
			<div class="input-group">
				<input asp-for="SearchCustomer" class="form-control mr-1" placeholder="Søg på et navn" />
				<input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<table class="table table-hover">
	<colgroup> @* Not mobile friendly *@
		<col style="width : 5%">
		<col style="width : 77%">
		<col style="width : 9%">
		<col style="width : 9%">
	</colgroup>
	<thead>
		<tr>
			<th scope="col" class="d-none d-sm-table-cell">
				ID
			</th>
			<th scope="col">
				Name
			</th>
			<th scope="col">
				Address
			</th>
			<th scope="col" class="d-none d-sm-table-cell">
				E-mail
			</th>
			<th scope="col">
				Telefonnummer
			</th>
			<th scope="col" class="d-none d-sm-table-cell">
				
			</th>
			<th scope="col" class="d-none d-sm-table-cell">
				
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.CustomerList != null)
		{
			foreach (var c in Model.CustomerList)
			{
				<tr class="table-light">
					<th scope="row" class="d-none d-sm-table-cell">
					@c.ID
				</th>
				<td>
					@c.Name
				</td>
				<td>
					@c.Address
				</td>
					<td class="d-none d-sm-table-cell">
					@c.Email
				</td>
				<td>
                    @c.PhoneNumber
					<td class="d-none d-sm-table-cell">
					<a class="btn btn-primary" type="button" asp-page="UpdateCustomer" asp-route-id="@c.ID"><i class="fa fa-edit"></i></a>
				</td>
					<td class="d-none d-sm-table-cell">
					<a class="btn btn-danger" type="button" asp-page="DeleteCustomer" asp-route-id="@c.ID"><i class="fa fa-trash"></i></a>
				</td>
			</tr>
			}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateCustomer"> Create a new Customer </a>
</p>