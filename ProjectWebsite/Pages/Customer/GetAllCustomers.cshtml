@page
@model ProjectWebsite.Pages.Customer.GetAllCustomersModel
@{
}

<h1>Kundeoversigt</h1>

<div class="row">
	<div class="col-4"></div>
	<div class="col-4"><h5>Søg på navn</h5></div>
	<div class="col-4"></div>
</div>

<div class="row">
	<div class="col-4">
		<form method="post" class="form-inline">
			<div class="input-group mb-3">
				<input asp-for="SearchCustomer" class="form-control mr-1" placeholder="Søg i kundelisten" />
				<input type="submit" asp-page-handler="NameSearch" value="Search" class="btn btn-primary" />
			</div>
		</form>
	</div>

	<div class="col-5"></div>
	<div class="col-2"></div>
</div>

<table class="table table-bordered table-hover table-striped table-opacity" width="60%">
	<colgroup>
		<col style="width : 5%">
		<col style="width : 77%">
		<col style="width : 9%">
		<col style="width : 9%">
	</colgroup>
	<thead>
		<tr class="btn-secondary active">
			<th>
				Id
			</th>
			<th>
				Name
			</th>
			<th>
				Address
			</th>
			<th>
				E-mail
			</th>
			<th>
				Telefonnummer
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.CustomerList != null)
		{
			foreach (var c in Model.CustomerList)
			{
				<tr class="btn-secondary">
					<td>
						@c.ID
					</td>
					<td>
						@c.Name
					</td>
					<td>
						@c.Address
					</td>
					<td>
						@c.Email
					</td>
					<td>
                        @c.PhoneNumber
					<td>
						<a class="btn btn-primary btn-sm" type="button" title="Update" asp-page="UpdateCustomer" asp-route-id="@c.ID"><i class="fa fa-edit"></i></a>
						<a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteCustomer" asp-route-id="@c.ID"><i class="fa fa-trash"></i></a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>

<p>
	<a class="btn btn-primary" asp-page="CreateCustomer"> Create a new Customer </a>
</p>