@page
@model ProjectWebsite.Pages.Events.CreateEventModel
@{
}

<span class="brlarge"></span>
<div class="row justify-content-center">
    <div class="col-9 col-xs-8 col-sm-7 col-md-6 col-lg-5 col-xl-4 p-4 alert alert-secondary">
        <form method="post">

            <input type="hidden" asp-for="@Model.Event.ID" />

            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" />
                <span asp-validation-for="@Model.Event.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Location" class="control-label"></label>
                <input asp-for="@Model.Event.Location" class="form-control" />
                <span asp-validation-for="@Model.Event.Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.DateTime" class="control-label"></label>
                <input asp-for="@Model.Event.DateTime" class="form-control" />
                <span asp-validation-for="@Model.Event.DateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Duration" class="control-label"></label>
                <input asp-for="@Model.Event.Duration" class="form-control" />
                <span asp-validation-for="@Model.Event.Duration" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" />
                <span asp-validation-for="@Model.Event.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Cost" class="control-label"></label>
                <input asp-for="@Model.Event.Cost" class="form-control" type="number" step="0.01" min="0" max="1000000" /> @* Can only take numbers with 2 decimals now *@
                <span asp-validation-for="@Model.Event.Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Capacity" class="control-label"></label>
                <input asp-for="@Model.Event.Capacity" class="form-control" type="number" step="1" min="0"/>
                <span asp-validation-for="@Model.Event.Capacity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Event.Organizer" class="control-label"></label>
                <input asp-for="@Model.Event.Organizer" class="form-control" />
                <span asp-validation-for="@Model.Event.Organizer" class="text-danger"></span>
            </div>

            <p>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i>  Opret</button>
                    <button type="submit" asp-page-handler="Cancel" class="btn btn-danger"> Fortryd</button>
                </div>
            </p>

        </form>
    </div>
</div>