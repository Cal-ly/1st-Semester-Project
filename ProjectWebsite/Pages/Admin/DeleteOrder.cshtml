@page
@model ProjectWebsite.Pages.Admin.DeleteOrderModel
@{
}
<span class="brlarge"></span>
<div class="row justify-content-center text-center">
    <h1>Delete Confirmation</h1>
    <div class="col-8 col-xs-8 col-sm-8 col-md-7 col-lg-6 col-xl-5 p-4 alert alert-danger">
        <h5>Are you sure you want to delete: @Model.Order.ID, tilhørende @Model.Order.CustomerID</h5>
        <form method="post" class="d-flex justify-content-around">
            <button type="submit" class="btn btn-danger">Confirm</button>
            <button type="submit" asp-page-handler="Cancel" class="btn btn-primary">Cancel</button>
        </form>
    </div>
</div>