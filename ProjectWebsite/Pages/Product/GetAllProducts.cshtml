@page
@model ProjectWebsite.Pages.Product.GetAllProductsModel
@{
}

<table class="table table-bordered table-hover table-striped table-opacity" width="60%">
    <col style="width:5%">
    <col style="width:77%">
    <col style="width:9%">
    <col style="width:9%">

    <thead>
        <tr class="btn-secondary active">
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var product in Model.Product)
        {
            <tr class="btn-secondary">
                <th>
                    @item.Id
                </th>
                <th>
                    @item.Name
                </th>
                <th>
                    @item.Price
                </th>
                <td>
                    <a class="btn btn-primary btn-sm" type="button" title="Edit" asp-page="EditItem" asp-route-id="@item.Id"> <i class="fa fa-edit"></i></a>
                    <a class="btn btn-danger btn-sm " type="button" title="Delete" asp-page="DeleteItem" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                </td>
            </tr>  

        }
    </tbody>
</table>