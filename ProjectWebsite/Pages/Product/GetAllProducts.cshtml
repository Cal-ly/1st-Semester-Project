@page
@model ProjectWebsite.Pages.Product.GetAllProductsModel
@{
}


    <h1 class="pb-5 text-center">Vores Produkter</h1>



<form method="post" class="form-inline">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text">Min</span>
        </div>
        <input asp-for="MinPrice" class="form-control mr-1" />

        <div class="input-group-prepend">
            <span class="input-group-text">Max</span>
        </div>
        <input asp-for="MaxPrice" class="form-control mr-1" />
        <input type="submit" asp-page-handler="PriceFilter" value="Filter" class="btn btn-primary" />
    </div>
</form>

<form method="post" class="form-inline">
    <input asp-for="SearchString" class="form-control mr-1" placeholder="Søg på te-type" />
    <input type="submit" asp-page-handler="NameSearch" value="Søg" class="btn btn-primary" />
</form>



    <div class="container">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-sm-1 col-lg-4 mb-3">
                    <div class="card" display="inline-block" style="width: 18rem;">
                        <img src="/img/placeholder.jpg" class="card-img-top" alt="Billede af te">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <a class="btn btn-primary" type="button" title="Se mere" asp-page="GetProduct" asp-route-id="@product.ID">Se mere</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>







       







